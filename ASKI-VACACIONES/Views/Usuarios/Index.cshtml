<!--Enteros-->
<script type="text/javascript">
    $(document).ready(function () {
        $('.NumberInteger').keypress(function (event) {
            if ((event.which < 48 || event.which > 57)) {
                event.preventDefault();
                alert('Solo puede ingresar numeros');
            }
        });
    });

</script>
<!--Password-->
<script type="text/javascript">

    function Generarpasword() {
        var Segundonombre = document.getElementById("segundonombre").value; 
        var talento = document.getElementById("talentohumano").value; 
        var longi = talento.length; 
        var longi2 = longi - 2; 
        var cortar_cadena = talento.slice(longi2, longi); 
        var concatenar = Segundonombre.concat(cortar_cadena);  

        document.getElementById("pass").value = concatenar;
        alert("listo");


    }
</script>
