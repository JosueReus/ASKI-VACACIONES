@model ASKI_VACACIONES.Models.RolesModel

<section class="content-header">
<h1>
    Roles

</h1>
<ol class="breadcrumb">
    <li><a href="~/Home/Calendario"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Roles</li>
</ol>
</section>

<!-- Content Wrapper. Contains page content -->

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                                    @using (Html.BeginForm())
                                    {
                                        
                                            <div class="panel-body">
                                                <div class="box box-primary">
                                                    <div class="box-header with-border">
                                                        <h3 class="box-title"></h3>
                                                    </div><!-- /.box-header -->
                                                    <!-- form start -->
                                                    <form class="form-horizontal">
                                                        <div class="cd-tabs">
                                                            <nav>
                                                                <ul class="cd-tabs-navigation">
                                                                    <li><a data-content="inbox" class="selected" href="#0">Agregar</a></li>
                                                                    <li><a data-content="new" href="~/Roles/Edit">Modificar</a></li>
                                                                    <li><a data-content="tash" href="~/Roles/Delete">Eliminar</a></li>
                                                                </ul> <!-- cd-tabs-navigation -->
                                                            </nav>
                                                            <ul class="cd-tabs-content">
                                                                <li data-content="inbox" class="selected">
                                                                    <div class="box-body">

                                                                        <div class="form-group">
                                                                            <label for="inputdescripcion" class="col-sm-2 control-label">Descripcion</label>
                                                                            <div class="col-sm-10">
                                                                                <p>@Html.TextBoxFor(x => x.descripcion, new { @class = "form-control", type = "text" })</p>
                                                                                @*<input type="text" class="form-control" id="inputdescripcion" size="20">*@
                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <label for="inputdepto" class="col-sm-2 control-label">Permisos</label>
                                                                            <input type="checkbox" name="check" id="check" value="1" onchange="javascript:showContent()" />
                                                                            <div id="content" style="display: none;">

                                                                                <div class="box">
                                                                                    <div class="box-header">
                                                                                        <h3 class="box-title"></h3>
                                                                                    </div><!-- /.box-header -->
                                                                                    <div class="box-body">
                                                                                        <table id="example1" class="table table-bordered table-striped">

                                                                                            <thead>
                                                                                                <tr>
                                                                                                    <th>Seleccionar</th>
                                                                                                    <th>Permisos</th>

                                                                                                </tr>
                                                                                            </thead>

                                                                                            <tfoot>
                                                                                                <tr>
                                                                                                    <th><input type="checkbox"></th>
                                                                                                    <th></th>

                                                                                                </tr>
                                                                                            </tfoot>
                                                                                        </table>
                                                                                    </div><!-- /.box-body -->
                                                                                </div><!-- /.box -->

                                                                            </div>
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <label for="inputestado" class="col-sm-2 control-label">Estado</label>
                                                                            <div class="col-sm-10">
                                                                                <p>
                                                                                    <select class="form-control" disabled>
                                                                                        <option>Activo</option>
                                                                                        <option>No Activo</option>
                                                                                    </select>
                                                                                </p>
                                                                            </div>
                                                                        </div><!-- /.box-body -->
                                                                        <div class="box-footer">
                                                                            <button type="submit" class="btn btn-info pull-right">Agregar</button>
                                                                        </div><!-- /.box-footer -->
                                                                    </div>
                                                                </li>
                                                               
                                                            </ul> <!-- cd-tabs-content -->
                                                        </div> <!-- cd-tabs -->
                                                    </form>
                                                </div><!-- /.box -->
                                            </div>
                                        
                                    }
                                </div>
                           
                        </div>
                    </div>
           
                <!-- Left col -->
                <section class="col-lg-7 connectedSortable"></section><!-- /.Left col -->
                <!-- right col (We are only adding the ID to make the widgets sortable)-->
                <section class="col-lg-5 connectedSortable"></section><!-- right col -->
           
       
    </section><!-- /.content -->

