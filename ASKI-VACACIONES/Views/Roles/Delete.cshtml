@model  ASKI_VACACIONES.Models.RolesModel

<section class="content-header">
    <h1>
        Roles

    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Calendario"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Roles</li>
    </ol>
</section>

<!-- Content Wrapper. Contains page content -->
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                @using (Html.BeginForm())
                {

                    <div class="panel-body">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title"></h3>
                            </div><!-- /.box-header -->
                            <!-- form start -->
                            <form class="form-horizontal">
                                <div class="cd-tabs">
                                    <nav>
                                        <ul class="cd-tabs-navigation">
                                            <li><a data-content="inbox" href="~/Roles/Index">Agregar</a></li>
                                            <li><a data-content="new" href="~/Roles/Edit">Modificar</a></li>
                                            <li><a data-content="tash" class="selected">Eliminar</a></li>
                                        </ul> <!-- cd-tabs-navigation -->
                                    </nav>
                                    <ul class="cd-tabs-content">
                                        <li data-content="new" class="selected">
                                            <div class="box-body">
                                                <div class="form-group">
                                                    <label for="inputidrol" class="col-sm-2 control-label">Id rol</label>
                                                    <div class="col-sm-10">
                                                        <p><input type="text" class="form-control" id="inputidrol" size="20"></p>
                                                    </div>
                                                </div>

                                               
                                            
                                                <div class="box-footer">
                                                    <button type="submit" class="btn btn-info pull-right">Eliminar</button>
                                                </div><!-- /.box-footer -->
                                            </div>
                                        </li>
                                    </ul> <!-- cd-tabs-content -->
                                </div> <!-- cd-tabs -->
                            </form>
                        </div><!-- /.box -->
                    </div>

                }
            </div>

        </div>
    </div>

    <!-- Left col -->
    <section class="col-lg-7 connectedSortable"></section><!-- /.Left col -->
    <!-- right col (We are only adding the ID to make the widgets sortable)-->
    <section class="col-lg-5 connectedSortable"></section><!-- right col -->


</section><!-- /.content -->